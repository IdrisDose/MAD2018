<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="32sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/text_default"/>

            <TextView
                android:id="@+id/home_owned_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_fragment_title"
                android:gravity="center"
                android:text="@string/home_product_count"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/default_margin_size"
                android:layout_marginRight="@dimen/default_margin_size"/>

            <TextView
                android:id="@+id/home_open_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_owned_products"
                android:layout_marginTop="@dimen/default_margin_size"
                android:gravity="center"
                android:text="@string/home_ticket_active_count"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/default_margin_size"
                android:layout_marginRight="@dimen/default_margin_size"/>

            <TextView
                android:id="@+id/home_recent_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_open_tickets"
                android:layout_marginTop="@dimen/default_margin_size"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/home_recent_news"
                android:layout_marginLeft="@dimen/default_margin_size"
                android:layout_marginRight="@dimen/default_margin_size" />
            <TextView
                android:id="@+id/home_news_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_recent_news"
                android:layout_marginLeft="@dimen/default_margin_size"
                android:layout_marginRight="@dimen/default_margin_size"
                android:text="@string/text_default"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>